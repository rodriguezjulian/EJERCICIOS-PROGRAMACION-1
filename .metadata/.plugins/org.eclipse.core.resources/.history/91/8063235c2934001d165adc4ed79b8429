//RODRIGUEZ JULIAN MANUEL DIV J - EJERCICIO ARRAYS EN CLASE
#include <stdio.h>
#include <stdlib.h>
#include "ingresos.h"
#define TAM 5

void inicializarArray(int array[],int tam);

int promediarArrayInt(int* numerosIngresados,int tamArray, float* promedioArray,int sumaTotal);
int main(void) {
	setbuf(stdout,NULL);

	int numerosIngresados[TAM];

	int sumaTotal;
	float promedioArray;
	int retorno;

	inicializarArray(numerosIngresados,TAM);

	for(int i=0;i<5;i++)
	{
		numerosIngresados[i]= ingresarInt();
		retorno= promediarArrayInt(numerosIngresados[i],TAM, &promedioArray,sumaTotal);
	}
	printf("retorno %d",retorno);
	printf("Promedio array %f",promedioArray);

	return EXIT_SUCCESS;
}
int promediarArrayInt(int* numerosIngresados,int tamArray, float* promedioArray,int sumaTotal)
{

	int retorno=-1;
	if(numerosIngresados!=NULL && promedioArray!=NULL && tamArray>0 )//
	{
		for(int i=0;i<tamArray;i++)
		{
			sumaTotal=sumaTotal+numerosIngresados[i];
			*promedioArray=(float)sumaTotal/tamArray;
			retorno=0;
		}
	}
	//acumulador=acumulador+numerosIngresados;

	return retorno;
}
void inicializarArray(int array[],int tam)
{
	if(array!=NULL)
	{
		for (int i = 0; i < tam; ++ i)
		{
			array[i]=0;
		}
	}
}







