#include <stdio.h>
#include <stdlib.h>
void validarEntradaParaOpcion3(int contadorJugadores,int flagJugadores)
{

	if(flagCostos==1 && contadorJugadores>0)
	{
		printf("\nCalculos realizados correctamente\n");
	}else
	{
		printf("\nERROR, Primero debe cargar costos e ingresar jugadores\n");
	}
}
void validarEntradaParaOpcion4(int flagCostos,int contadorJugadores,int flagCalculos)
{
	{

		if(flagCostos==1 && contadorJugadores>0 && flagCalculos==1)
		{
			printf("\nCalculos realizados correctamente\n");
		}else
		{
			printf("\nERROR, Primero debe cargar costos, ingresar jugadores y realizar los calculos\n");
		}
	}
}
