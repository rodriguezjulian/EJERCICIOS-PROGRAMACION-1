#include <stdio.h>
#include <stdlib.h>
int validarEntradaParaOpcion3(int flagCostos,int contadorJugadores)
{
	int retorno=-1;
	if(flagCostos==1 && contadorJugadores>0)
	{
		calcularPromedioJugadoresxMercado(&promedioAfc,contadorJugadores, contadorAfc);
		calcularPromedioJugadoresxMercado(&promedioCaf,contadorJugadores, contadorCaf);
		calcularPromedioJugadoresxMercado(&promedioConcacaf,contadorJugadores, contadorConcacaf);
		calcularPromedioJugadoresxMercado(&promedioConmebol,contadorJugadores, contadorConmebol);
		calcularPromedioJugadoresxMercado(&promedioUefa,contadorJugadores, contadorUefa);
		calcularPromedioJugadoresxMercado(&promedioOfc,contadorJugadores, contadorOfc);
		printf("\nCalculos realizados correctamente\n");
		retorno=0;
	}else
	{
		printf("\nERROR, Primero debe cargar costos e ingresar jugadores\n");
	}
	return retorno;
}
