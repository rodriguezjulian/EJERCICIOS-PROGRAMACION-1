int calcularPromedioJugadoresxMercado(float *promedio,int contadorJugadores, int contadorDeConfederacion)
{
	int retorno=-1;
	if(promedio!=NULL && contadorDeConfederacion>0)
	{
		retorno=0;
		*promedio=contadorJugadores/contadorDeConfederacion;
	}
	return retorno;
}
