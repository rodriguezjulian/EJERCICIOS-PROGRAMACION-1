#include <stdio.h>
#include <stdlib.h>
#define TAM 20

int main(void) {
	setbuf(stdout,NULL);

	char codigo[TAM][4];
	char modelo[TAM][10];
	int cantidad[TAM];
	float precio[TAM];

	return EXIT_SUCCESS;
}
void menu(void)
{
	char respuesta;
	char opcion;
	do
	{
		printf("Ingrese opcion que desea operar\n"
				"'A'Carga de productos\n"
				"'B' Venta de productos\n"
				"'C'Modificación del precio\n"
				"'D'Modificar el modelo\n"
				"'E'Listar ordenado por código\n"
				"'F'Listar datos de los productos con menos de 3 unidades");
		fflush(stdin);
		scanf("%c",&opcion);

		switch(opcion)
		{
			case 'A':
			break;
			case 'B':
			break;
			case 'C':
			break;
			case'D':
			break;
			case 'E':
			break;
			case 'F':
			break:


		}
	}while(respuesta=='s');
}
