#include <stdio.h>
#include <stdlib.h>
#include "ingresos.h"
#include "calculos.h"

#define TAM 5
#define MIN -100
#define MAX 100
#define REINTENTOS 3

int sumarImparesDeArray(int* array,int tam);

int main(void) {
	setbuf(stdout,NULL);

	int numerosIngresados[TAM];
	int contadorNegativos;
	int sumatoriaDeImpares;
	//contadorNegativos=0;

	//INICIALIZO POR SI EL USUARIO SE QUEDA SIN REINTENTOS, EN ESTE CASO LA POSICION QUEDARIA EN 0
	inicializarArray(numerosIngresados,TAM);
	//CARGA DE DATOS
	for(int i=0;i<TAM;i++)
	{
		ingresarNumerosConRango(&numerosIngresados[i],"Ingrese un numero comprendido en el rango ", "Error, debe respetar el rango\n", MIN, MAX, REINTENTOS);
	}

	//USO ESTE FOR PARA LOS PUNTOS ABC
	for(int i=0;i<TAM;i++)
	{
		contadorNegativos=contarNegativosArray(numerosIngresados,TAM);
		//contadorImpares=contarImparesDeArray(numerosIngresados,TAM);
		sumatoriaDeImpares=sumarImparesDeArray(numerosIngresados,TAM);
	}
	printf("SE INGRESARON %d NUMEROS NEGATIVOS\n",contadorNegativos );
	printf("LA SUMA DE LOS NUMEROS IMPARES INGRESADOS ES %d \n",sumatoriaDeImpares);

	return EXIT_SUCCESS;
}
int sumarImparesDeArray(int* array,int tam)
{
	int retorno=0;
	if(array!=NULL && tam>0)
	{
		for(int i=0;i<tam;i++)
		{
		 	if(array[i]%2==1)
			{
				retorno=retorno+array[i];
			}
		}
	}

	return retorno;
}


